{
  "name": "SubPIP (Picture-in-Picture)",
  "description": "Picture-in-Picture (with subtitle support)",
  "version": "1.0",
  "icons": {
    "128": "assets/icon28.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "19": "assets/icon28.png",
      "38": "assets/icon28.png"
    }
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "windows": "Alt+P",
        "mac": "Alt+P",
        "chromeos": "Alt+P",
        "linux": "Alt+P"
      }
    }
  },
  "permissions": [
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "manifest_version": 3
}